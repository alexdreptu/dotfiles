    output DVI-I-1
        output DVI-D-0
        mode dock
        position bottom
        modifier Mod1
        #status_command none
        tray_output DVI-I-1
        workspace_buttons yes
        font xft:dejavu sans bold 11
        colors {
            background #1a1a10
                statusline #B37300
                focused_workspace  #a9a9a9 #4d4d3a #ffffff
                active_workspace   #333333 #33334D #ffffff
                inactive_workspace #333333 #1a1a10 #888888
                urgent_workspace   #7F7F7F #730000 #ffffff
        }
}

